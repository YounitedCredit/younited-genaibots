{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app:app",
                "--host",
                "localhost",
                "--port",
                "7071",
                "--workers",
                "1"
            ],
            "jinja": true,
            "justMyCode": true,
            "preLaunchTask": "install-requirements"
        },
        {
            "name": "Docker: Python - Fastapi",
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "docker-run: debug",
            "python": {
                "pathMappings": [
                    {
                        "localRoot": "${workspaceFolder}",
                        "remoteRoot": "/app"
                    }
                ],
                "projectType": "fastapi"
            }
        }
    ],
    "tasks": {
        "version": "2.0.0",
        "tasks": [
            {
                "label": "install-requirements",
                "type": "shell",
                "command": "python ${workspaceFolder}/install_requirements.py",
                "problemMatcher": []
            }
        ]
    }
}